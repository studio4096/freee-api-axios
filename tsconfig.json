{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
